FROM node:23-alpine3.21

RUN mkdir -p /usr/src/app/public
RUN apk add --no-cache vim git bash postgresql-client
# TODO: For now i'm building from prodsalt via script
# RUN git clone https://github.com/jeffdyke/hydra-login-consent-node.git /usr/src/app
COPY package*.json /usr/src/app/
COPY public /usr/src/app/public
COPY dist /usr/src/app/dist

WORKDIR /usr/src/app
VOLUME [ "/var/log/bondlink" ]

ENTRYPOINT ["npm", "run", "serve"]

EXPOSE 3000
