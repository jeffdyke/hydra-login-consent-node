{
  "compilerOptions": {
    "incremental": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "nodenext",
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "strict": true,
    "lib": ["es2020", "DOM"],
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "files": [
    "./typings/index.d.ts"
  ]
}
